<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.scripturememory">
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.SavedPassages"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.AddPsg"
            android:parentActivityName=".activities.SavedPassages">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.SavedPassages" />
        </activity>
        <activity android:name=".activities.MemoryExercise"
            android:parentActivityName=".activities.SavedPassages">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.SavedPassages" />
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>
    <uses-permission android:name="android.permission.INTERNET"/>
</manifest>