<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/VividTheme.BackgroundLayout"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/root_layout">

    <android.support.v7.widget.CardView
        android:id="@+id/cvExercise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/VividTheme.CardView"
        android:stateListAnimator="@anim/lift_on_touch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/clLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/VividTheme.CardView.Layout">

            <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/txtPsgRef"
                style="@style/VividTheme.TextView.Large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Passage Reference"
                app:layout_constraintBottom_toTopOf="@+id/txtPsgTextPreview"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtPsgTextPreview"
                style="@style/VividTheme.TextView.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@color/colorSecondary"
                android:text="Passage Text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtPsgRef">

            </TextView>

            <TextView
                android:id="@+id/txtPsgTextFull"
                style="@style/VividTheme.TextView.Medium"
                android:textColor="@color/colorSecondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Passage Text"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtPsgRef">

            </TextView>

            <Button
                android:id="@+id/btnShowMe"
                style="@style/VividTheme.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Show Me"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtPsgTextPreview" />

            <Button
                android:id="@+id/btnSuccess"
                style="@style/VividTheme.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="16dp"
                android:text="I Know It"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btnFail"
                app:layout_constraintTop_toBottomOf="@+id/txtPsgTextFull" />

            <Button
                android:id="@+id/btnFail"
                style="@style/VividTheme.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="I Don't Know It"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtPsgTextFull" />


        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>

